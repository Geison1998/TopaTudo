<p id="notice"><%= notice %></p>

<h1>Posts</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to '', post, class: 'btn btn-info glyphicon glyphicon-eye-open '  %></td>
        <td><%= link_to '', edit_post_path(post), class: 'btn btn-warning glyphicon glyphicon-pencil' %></td>
        <td><%= link_to '', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger glyphicon glyphicon-trash' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
<br>

<%= link_to 'New Post', new_post_path, class: 'btn btn-success' %>
