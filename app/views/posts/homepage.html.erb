<div class="container">
  <div class="startet-template">
    <%=  title "Topa tudo por dinheiro" %>

    <table class="table">
      <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
        <% Post.all.each do |post| %>
        <tr>
          <td><%=link_to post.title, post %></td>
            <% if can? :update, post %>
              <td><%= link_to '', edit_post_path(post), class: 'btn btn-warning glyphicon glyphicon-pencil' %></td>
              <td><%= link_to '', post, method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger glyphicon glyphicon-trash' %></td>
            <% end %>
          <% end %>
      </tbody>
    </table>
  </div>
</div>